<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="10dp"
        android:text="@string/textViewPlaceholder"
        android:gravity="end|center_vertical"
        android:textSize="20sp"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:gravity="end|bottom"
        android:textSize="28sp"
        app:layout_constraintVertical_weight="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_weight="2.5"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <Button
            android:id="@+id/buttonEquals"
            android:text="@string/equalsText"
            style="@style/EqualsButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buttonBackspace"
            app:layout_constraintRight_toLeftOf="@id/buttonPi"
            app:layout_constraintTop_toBottomOf="@+id/buttonPercent" />

        <Button
            android:id="@+id/buttonBackspace"
            android:text="@string/backspace"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buttonClear"
            app:layout_constraintRight_toLeftOf="@id/buttonEquals"
            app:layout_constraintTop_toBottomOf="@+id/button0" />

        <Button
            android:id="@+id/buttonAdd"
            android:text="@string/addText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonEquals"
            app:layout_constraintLeft_toRightOf="@+id/buttonPercent"
            app:layout_constraintRight_toLeftOf="@id/buttonE"
            app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />

        <Button
            android:id="@+id/buttonPercent"
            android:text="@string/percentText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonEquals"
            app:layout_constraintLeft_toRightOf="@id/button0"
            app:layout_constraintRight_toLeftOf="@id/buttonAdd"
            app:layout_constraintTop_toBottomOf="@+id/button9" />

        <Button
            android:id="@+id/button0"
            android:text="@string/zeroText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonBackspace"
            app:layout_constraintLeft_toRightOf="@+id/buttonDecimal"
            app:layout_constraintRight_toLeftOf="@id/buttonPercent"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/buttonSubtract"
            android:text="@string/subtractText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonAdd"
            app:layout_constraintLeft_toRightOf="@+id/button9"
            app:layout_constraintRight_toLeftOf="@id/buttonPower"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

        <Button
            android:id="@+id/button9"
            android:text="@string/nineText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonPercent"
            app:layout_constraintLeft_toRightOf="@+id/button8"
            app:layout_constraintRight_toLeftOf="@id/buttonSubtract"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button8"
            android:text="@string/eightText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button0"
            app:layout_constraintLeft_toRightOf="@+id/button7"
            app:layout_constraintRight_toLeftOf="@id/button9"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/buttonMultiply"
            android:text="@string/multiplyText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonSubtract"
            app:layout_constraintLeft_toRightOf="@+id/button6"
            app:layout_constraintRight_toLeftOf="@id/buttonParenthesesClose"
            app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

        <Button
            android:id="@+id/button6"
            android:text="@string/sixText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button9"
            app:layout_constraintLeft_toRightOf="@+id/button5"
            app:layout_constraintRight_toLeftOf="@id/buttonMultiply"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:text="@string/fiveText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button8"
            app:layout_constraintLeft_toRightOf="@+id/button4"
            app:layout_constraintRight_toLeftOf="@id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/buttonDivide"
            android:text="@string/divideText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonMultiply"
            app:layout_constraintLeft_toRightOf="@+id/button3"
            app:layout_constraintRight_toLeftOf="@id/buttonParenthesesOpen"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:text="@string/threeText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button6"
            app:layout_constraintLeft_toRightOf="@+id/button2"
            app:layout_constraintRight_toLeftOf="@id/buttonDivide"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:text="@string/twoText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button5"
            app:layout_constraintLeft_toRightOf="@+id/button1"
            app:layout_constraintRight_toLeftOf="@id/button3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button1"
            android:text="@string/oneText"
            style="@style/ButtonStyle"

            app:layout_constraintBottom_toTopOf="@id/button4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button4"
            android:text="@string/fourText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/button7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/buttonDecimal"
            android:text="@string/decimalText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonClear"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button0"
            app:layout_constraintTop_toBottomOf="@+id/button7" />

        <Button
            android:id="@+id/buttonClear"
            android:text="@string/clearText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/buttonBackspace"
            app:layout_constraintTop_toBottomOf="@+id/buttonDecimal" />

        <Button
            android:id="@+id/button7"
            android:text="@string/sevenText"
            style="@style/ButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonDecimal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/buttonParenthesesOpen"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/buttonSin"
            app:layout_constraintBottom_toTopOf="@id/buttonParenthesesClose"
            app:layout_constraintLeft_toRightOf="@id/buttonDivide" />

        <Button
            android:id="@+id/buttonParenthesesClose"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonParenthesesOpen"
            app:layout_constraintRight_toLeftOf="@id/buttonCos"
            app:layout_constraintBottom_toTopOf="@id/buttonPower"
            app:layout_constraintLeft_toRightOf="@id/buttonMultiply" />

        <Button
            android:id="@+id/buttonPower"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonParenthesesClose"
            app:layout_constraintRight_toLeftOf="@id/buttonTg"
            app:layout_constraintBottom_toTopOf="@id/buttonE"
            app:layout_constraintLeft_toRightOf="@id/buttonSubtract" />

        <Button
            android:id="@+id/buttonE"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonPower"
            app:layout_constraintRight_toLeftOf="@id/buttonLn"
            app:layout_constraintBottom_toTopOf="@id/buttonPi"
            app:layout_constraintLeft_toRightOf="@id/buttonAdd" />

        <Button
            android:id="@+id/buttonPi"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonE"
            app:layout_constraintRight_toLeftOf="@id/buttonSquareRoot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/buttonEquals" />

        <Button
            android:id="@+id/buttonSin"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintBottom_toTopOf="@id/buttonCos"
            app:layout_constraintLeft_toRightOf="@id/buttonParenthesesOpen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonCos"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonSin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonTg"
            app:layout_constraintLeft_toRightOf="@id/buttonParenthesesClose" />

        <Button
            android:id="@+id/buttonTg"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonCos"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonLn"
            app:layout_constraintLeft_toRightOf="@id/buttonPower" />

        <Button
            android:id="@+id/buttonLn"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonTg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonSquareRoot"
            app:layout_constraintLeft_toRightOf="@id/buttonE" />

        <Button
            android:id="@+id/buttonSquareRoot"
            style="@style/InvisibleButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/buttonLn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/buttonPi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>