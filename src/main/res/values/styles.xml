<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="EqualsButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/equals_button_background</item>
        <item name="layout_constraintHorizontal_weight">2</item>
    </style>

    <style name="InvisibleButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">0</item>
        <item name="layout_constraintHorizontal_weight">0</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>